@model CategoryFormModel

<h1>Modifica Categoria</h1>

<div class="category-edit-form">
    <form asp-controller="Category" asp-action="Edit" asp-route-id="@Model.Category.Id" method="post">
        @Html.AntiForgeryToken()
        <div class="form-group">
            <label asp-for="Category.Name" class="control-label"></label>
            <input asp-for="Category.Name" class="form-control" />
            <span asp-validation-for="Category.Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Salva Modifiche" class="btn btn-primary" />
            <a asp-action="Index" class="btn btn-secondary">Annulla</a>
        </div>
    </form>
</div>
